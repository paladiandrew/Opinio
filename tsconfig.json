{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*",
        "screens/*",
        "assets/*",
        "hooks/*",
        "app/*",
        "data/*",
      ]
    }
